<?xml version="1.0" encoding="utf-8"?>
<!-- border_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/white" /> <!-- 设置填充颜色 -->
    <stroke
        android:width="1dp"/> <!-- 设置边框宽度 -->
    <stroke
        android:color="#FFD3D3D3"
        />
    <corners
        android:radius="30dp"/>
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" /> <!-- 设置内边距 -->
</shape>

