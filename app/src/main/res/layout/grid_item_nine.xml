<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:columnCount="3"
        android:rowCount="3"
        >

        <ImageView
            android:id="@+id/photo1"
            android:layout_width="@dimen/nine_pic_height"
            android:layout_height="@dimen/nine_pic_width"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"/>


        <ImageView
            android:id="@+id/photo2"
            android:layout_width="@dimen/nine_pic_height"
            android:layout_height="@dimen/nine_pic_width"
            android:layout_marginStart="@dimen/nine_pic_margin"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:srcCompat="@mipmap/ic_cat" />

        <ImageView
            android:id="@+id/photo3"
            android:layout_width="@dimen/nine_pic_height"
            android:layout_height="@dimen/nine_pic_width"
            android:layout_marginStart="@dimen/nine_pic_margin"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:srcCompat="@mipmap/ic_cat" />

        <ImageView
            android:id="@+id/photo4"
            android:layout_width="@dimen/nine_pic_height"
            android:layout_height="@dimen/nine_pic_width"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:srcCompat="@mipmap/ic_cat" />


        <ImageView
            android:id="@+id/photo5"
            android:layout_width="@dimen/nine_pic_height"
            android:layout_height="@dimen/nine_pic_width"
            android:layout_marginStart="@dimen/nine_pic_margin"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:srcCompat="@mipmap/ic_cat" />

        <ImageView
            android:id="@+id/photo6"
            android:layout_width="@dimen/nine_pic_height"
            android:layout_height="@dimen/nine_pic_width"
            android:layout_marginStart="@dimen/nine_pic_margin"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:srcCompat="@mipmap/ic_cat" />

        <ImageView
            android:id="@+id/photo7"
            android:layout_width="@dimen/nine_pic_height"
            android:layout_height="@dimen/nine_pic_width"
